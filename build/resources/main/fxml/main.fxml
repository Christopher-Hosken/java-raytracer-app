<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="root" prefHeight="720.0" prefWidth="1280.0"  
style="-fx-background-color: rgb(21, 21, 23);" 
xmlns:fx="http://javafx.com/fxml/1" 
xmlns="http://javafx.com/javafx/17" 
stylesheets="css/style.css">
   <children>
      <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" alignment="CENTER"
      prefHeight="75.0" prefWidth="1280.0" 
      style="-fx-background-color: rgb(38, 38, 40);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17">
         <children>
            <ButtonBar prefHeight="75.0" prefWidth="1220.0"  buttonMinWidth="48.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17">
               <buttons>
                  <Button text="" ButtonBar.buttonData="LEFT" prefHeight="48.0" maxWidth="48.0" maxHeight="48.0" mnemonicParsing="false" styleClass="icon-button" onAction="#loadFile">
                     <graphic>
                        <ImageView fitHeight="24.0" preserveRatio="true">
                              <image>
                                 <Image url="@../css/icons/folder/folder_24.png"/>
                              </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button text="" ButtonBar.buttonData="LEFT" prefHeight="48.0" maxWidth="48.0" maxHeight="48.0" mnemonicParsing="false" styleClass="icon-button" onAction="#saveFile">
                     <graphic>
                        <ImageView fitHeight="24.0" preserveRatio="true">
                              <image>
                                 <Image url="@../css/icons/diskette/diskette_24.png"/>
                              </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <MenuButton text="" ButtonBar.buttonData="LEFT" prefHeight="48.0" maxWidth="48.0" maxHeight="48.0" mnemonicParsing="false" styleClass="icon-button, dropdown" accessibleRole="SPLIT_MENU_BUTTON">
                     <graphic>
                        <ImageView fitHeight="24.0" preserveRatio="true">
                              <image>
                                 <Image url="@../css/icons/object_add/object_add_24.png"/>
                              </image>
                        </ImageView>
                     </graphic>
                     <items>
                        <MenuItem text="Plane" styleClass="dropdown-item" onAction="#addPlane"/>
                        <MenuItem text="Cube" styleClass="dropdown-item"  onAction="#addCube"/>
                        <MenuItem text="Sphere" styleClass="dropdown-item"  onAction="#addSphere"/>
                        <MenuItem text="Cylinder" styleClass="dropdown-item"  onAction="#addCylinder"/>
                        <MenuItem text="Teapot" styleClass="dropdown-item"  onAction="#addTeapot"/>
                        <MenuItem text="Import (.obj)" styleClass="dropdown-item"  onAction="#importOBJ"/>
                     </items>
                  </MenuButton>
                  <Button text="" ButtonBar.buttonData="RIGHT" prefHeight="48.0" maxWidth="48.0" maxHeight="48.0" mnemonicParsing="false" styleClass="icon-button" onAction="#toggleRenderCam">
                     <graphic>
                        <ImageView fx:id="viewbuttonicon" fitHeight="24.0" preserveRatio="true">
                              <image>
                                 <Image url="@../css/icons/eye/eye_24.png"/>
                              </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button text="" ButtonBar.buttonData="RIGHT" prefHeight="48.0" maxWidth="48.0" maxHeight="48.0" mnemonicParsing="false" styleClass="icon-button" onAction="#reportBug">
                     <graphic>
                        <ImageView fitHeight="24.0" preserveRatio="true">
                              <image>
                                 <Image url="@../css/icons/bug/bug_24.png"/>
                              </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </buttons>
            </ButtonBar>
         </children>
      </HBox>

      <StackPane 
      fx:id="viewport"
      GridPane.columnIndex="0" GridPane.rowIndex="1"
      prefHeight="685.0" prefWidth="960.0"
      style="-fx-background-color: rgb(0, 0, 0);" xmlns:fx="http://javafx.com/fxml/17">
      </StackPane>

      <StackPane 
      fx:id="settings"
      GridPane.columnIndex="1" GridPane.rowIndex="1"
      prefHeight="685.0" prefWidth="320.0"
      style="-fx-background-color: rgb(28, 28, 30);" xmlns:fx="http://javafx.com/fxml/17">
      </StackPane>
   </children>
</GridPane>